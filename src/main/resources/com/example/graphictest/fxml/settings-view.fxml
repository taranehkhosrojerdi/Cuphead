    <center>
        <VBox alignment="CENTER" maxWidth="200" maxHeight="100" prefWidth="200" spacing="10">

            <Button fx:id="mode1" onMouseClicked="#startGameMode1" styleClass="primary-btn" text="difficulty level 1"/>
