<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.graphictest.View.MainMenu"
            prefHeight="400.0" prefWidth="600.0">
    <center>
        <VBox alignment="CENTER" maxWidth="200" maxHeight="100" prefWidth="200" spacing="10">

            <Button fx:id="profileButton" onMouseClicked="#enterProfileMenu" styleClass="primary-btn"
                    text="profile Menu"/>
            <Button fx:id="gameButton" onMouseClicked="#enterGame" styleClass="primary-btn" text="start game"/>
            <Button fx:id="scoreBoardButton" onMouseClicked="#showScoreBoard" styleClass="primary-btn"
                    text="scoreboard"/>
            <Button fx:id="exitButton" onMouseClicked="#exitProgram" styleClass="primary-btn" text="exit"/>

        </VBox>
    </center>
</BorderPane>
